<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroudFragment">


    <!-- ASUS -->
    <CheckBox
        android:id="@+id/brand_asus"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="0"
        android:layout_column="0"
        android:background="@drawable/checkbox_asus"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:onClick="onCheckBoxChecked" />

    <CheckBox
        android:id="@+id/brand_casper"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/checkbox_casper"
        android:button="@android:color/transparent"
        android:gravity="center"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_gm"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/checkbox_gm"
        android:button="@android:color/transparent"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_huawei"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/checkbox_huawei"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_lenovo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@drawable/checkbox_lenovo"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_lg"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="1"
        android:layout_column="2"
        android:background="@drawable/checkbox_lg"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_nokia"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/checkbox_nokia"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_sony"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/checkbox_sony"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_oppo"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/checkbox_oppo"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_vestel"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="3"
        android:layout_column="1"
        android:adjustViewBounds="true"
        android:background="@drawable/checkbox_vestel"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_samsung"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="2"
        android:layout_column="2"
        android:adjustViewBounds="true"
        android:background="@drawable/checkbox_samsung"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

    <CheckBox
        android:id="@+id/brand_xiaomi"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_row="3"
        android:layout_column="2"
        android:adjustViewBounds="true"
        android:background="@drawable/checkbox_xiaomi"
        android:button="@android:color/transparent"
        android:onClick="onCheckBoxChecked"
        grid:layout_columnWeight="1"
        grid:layout_gravity="fill_horizontal" />

</GridLayout>